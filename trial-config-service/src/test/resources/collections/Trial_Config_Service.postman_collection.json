			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"if (!pm.globals.get('accessToken')) {",
					"    console.log('getting access token');",
					"    pm.sendRequest({ ",
					"        url: pm.environment.get(\"auth-url\"), ",
					"        method: 'POST',",
					"        body: { ",
					"            mode: 'formdata',",
					"            formdata:[  { key: 'grant_type', value:'client_credentials'},",
					"                        { key: 'client_id', value: pm.environment.get(\"client-id\")}, ",
					"                        { key: 'client_secret', value: pm.environment.get(\"client-secret\")},",
					"                        { key: 'scope', value: 'api://mts-apps/.default'}",
					"            ]",
					"        }",
					"    }, function (err, response) {",
					"        pm.globals.set('accessToken', response.json().access_token);",
					"    });",
					"}"
				]
			}
